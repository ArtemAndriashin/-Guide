<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Реєстрація"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_auth_registr"
            android:hint="Email"
            android:inputType="text"
            android:textColorHint="#8A8484"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_auth_registr"
            android:foreground="?attr/selectableItemBackground"
            android:hint="Ваш логін"
            android:inputType="text"
            android:textColorHint="#8A8484"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/emailEditText"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_auth_registr"
            android:foreground="?attr/selectableItemBackground"
            android:hint="Пароль"
            android:inputType="text"
            android:textColorHint="#8A8484"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/usernameEditText"/>

        <EditText
            android:id="@+id/passwordRepeatEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_auth_registr"
            android:foreground="?attr/selectableItemBackground"
            android:hint="Повторіть пароль"
            android:inputType="text"
            android:textColorHint="#8A8484"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText"/>

        <EditText
            android:id="@+id/dataBirthEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_auth_registr"
            android:foreground="?attr/selectableItemBackground"
            android:hint="Ваш вік"
            android:inputType="text"
            android:textColorHint="#8A8484"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/passwordRepeatEditText"/>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2AC046"
            android:text="Зареєструватися"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/dataBirthEditText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>